{% extends 'base.html.twig' %}

{% block title %}Page des stages{% endblock %}

{% block body %}

{% if idEtu == 0 %}
	<h3>Liste des stages disponibles</h3>
{% else %}
	<h3>Liste des stages de l'étudiant {{idEtu}}</h3>
{% endif %}
<h4><a href="/prostages/stage-ajout">Ajouter un stage</a></h4>
<h4><a href='/prostages'>Revenir à l'accueil</a><br></h4>

<div class="table">


	<div class="row">
		{% for stage in listeStages %}
		<div class="col-md-4">
			<div class="jumbotron">
				<h2>
					{{ stage.Nom }}
                </h2>
				<p>
					{{ stage.Description }}
				</p>
				<h4>
                    Entreprise : {{ stage.entreprise.nom }}
                </h4>
                <h4>
                    Contactez-nous : {{ stage.Mail }}
                </h4>
                <h4>
                    Téléphone : {{ stage.Tel }}
                </h4>
			</div>
		</div>
		{% endfor %}
	</div>

</div>
<h3><a href="{{ path('app_logout') }}">Se déconnecter</a></h3>
{% endblock %}